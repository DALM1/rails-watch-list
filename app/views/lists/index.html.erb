<h1>All Lists</h1>

<%= link_to 'New List', new_list_path %>

<ul>
  <% @lists.each do |list| %>
    <li>
      <%= image_tag list.image.url if list.image.present? %>
      <%= link_to list.name, list_path(list) %>
      <%= link_to 'Edit', edit_list_path(list) %>
      <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
